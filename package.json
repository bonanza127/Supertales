{
  "name": "super-tale-game",
  "version": "0.1.0",
  "private": true,
  "homepage": ".", // GitHub Pages用設定 (Netlifyなら不要な場合も) "."は相対パスを示す
  "dependencies": {
    "react": "^18.2.0", // React 本体
    "react-dom": "^18.2.0", // React を DOM に描画するライブラリ
    "tone": "^14.7.77", // 音声ライブラリ (バージョンは例)
    "lucide-react": "^0.309.0" // アイコンライブラリ (Heart以外でも使う可能性があれば)
    // 他に必要なライブラリがあれば追加
  },
  "scripts": {
    "start": "react-scripts start", // 開発サーバー起動 (Create React Appの場合)
    "build": "react-scripts build", // 本番用ファイル生成 (Create React Appの場合)
    "test": "react-scripts test",
    "eject": "react-scripts eject"
    // Viteなど他のツールを使う場合は、ここのコマンドが変わります
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "react-scripts": "5.0.1" // Create React App のスクリプト (バージョンは例)
